{
    "model": {
      "n_clusters": 19,
      "memory_efficient": false, 
      "perform_clustering": false,
       "representation_model": {
        "model_class": "ActiveGNN",
        "params": {
          "node_dim": 200,
          "embedding_d": 50,
          "hidden_dim": 64, 
          "num_conv_layers": 3,
          "eps": 0.1,
          "num_epoch_init": 300,
          "lambda_ewc": null,
          "update_embedding": false
          }
       },
       "regression_model": {
        "model_class": "Bilinear",
        "params": {
          "use_keops": true
        } 
      }
    },

    "training": {
        "train_jointly": true,
        "n_iter": 50,
        "device": "gpu",
        "num_epoch_joint": 150,
        "learning_rate_regression": 0.1, 
        "learning_rate_embedding": 0.01, 
        "weight_decay_reg": 0.001, 
        "weight_decay_embd": 0.0001, 
        "learning_rate_decay": 0.5,
        "num_epoch_alternating": 5,
        "num_epoch_embedding": 10,
        "num_epoch_regressor": 10,
        "update_embedding": false
    },

    "data_file": "data/kg.pt",
    "base_checkpoint_dir": "outputs/representation_learning/models/GNN/mp",
    "base_pred_dir": "outputs/predictions/models/GNN/mp",
    "base_embedding_dir": "outputs/representation_learning/embeddings/mp",
    
    "logging_interval": 5,
    "perform_hindsight": true 
  }
  
